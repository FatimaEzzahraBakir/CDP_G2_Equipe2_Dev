<!DOCTYPE html>
<html lang="fr" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/materialize.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Ajouter Tâche</title>
</head>

<body>
  <nav class="navmargin">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Gestion projets</a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <form action="/user/<%= userLogin %>/projects/<%= project.id %>/addTask" method="POST">
        <div class="row">
          <div class="col s12">
            <div class="card center-align mg">
              <div class="card-content">
                <span class="card-title">Ajouter une tâche</span>
                <% if (typeof  error != 'undefined') { %>
                <div class="card-pannel small red darken-2 white-text"><%= error %></div>
                <% } %>
                <div class="input-field">
                  <input name="description" type="text" class="validate" placeholder="description" required>
                </div>
                <div class="input-field">
                  <input name="dod" type="text" class="validate" placeholder="Définition Of Done" required>
                </div>
                <div class="input-field">
                  <input name="state" type="text" class="validate" placeholder="state" required>
                </div>
                <div class="input-field">
                    <input name="length" type="number" class="validate" placeholder="Coût" required>
                </div>
                <button class="btn waves-effect waves-light" type="submit">Ajouter</button>
                <a class="btn waves-effect waves-light red" href="/">Retour</a>
              </div>
            </div>
          </div>
        </div>
</body>